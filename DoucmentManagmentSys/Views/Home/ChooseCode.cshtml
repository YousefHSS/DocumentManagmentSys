@model Tuple<PrimacyDocument, string, string>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Choose Code for @Model.Item1.FileName</h3>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <a href="@Url.Action("UseExistingCode", "Home", new { id = Model.Item1.Id, code = Model.Item2 })" class="btn btn-primary m-1">Use Existing Code: @Model.Item2</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <h1>OR</h1>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="@Url.Action("UseFullCode", "Home", new { id = Model.Item1.Id, code = Model.Item3 })" class="btn btn-primary m-1">Use Full Code: @Model.Item3</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>